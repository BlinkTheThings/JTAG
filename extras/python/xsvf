#!/usr/bin/python
# coding: utf-8

import argparse
import XSVFDisassembler
import sys
import Uploader

my_parser = argparse.ArgumentParser(
    description='XSVF file processor.',
    epilog='Parameters can be in a file, one per line, using @"file name"',
    fromfile_prefix_chars='@')
my_parser.add_argument(
    '-c', '--command',
    type=str,
    choices=['upload', 'disasm'],
    default='upload',
    help='command to execute.'
         ' (default=%(default)s)')
my_parser.add_argument(
    'fileName',
    nargs='+',
    type=argparse.FileType('rb'),
    help='XSVF file names.'
         ' (type %(type)s)')
my_parser.add_argument(
    '-v', '--version',
    action='version',
    version='%(prog)s version 1.0.0')


def main():
    ok = False
    Uploader.Uploader.add_arguments(my_parser)
    args = my_parser.parse_args()
    if args.command == 'upload':
        u = Uploader.Uploader(args.port, args.baud)
        ok = u.upload_all_files(args.fileName)
    elif args.command == 'disasm':
        d = XSVFDisassembler.XSVFDisassembler()
        ok = d.disasm_all_files(args.fileName)
    sys.exit(ok)

if __name__ == '__main__':
    main()
